<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <LinearLayout
        style="@style/bg_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/icon"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/_1sdp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_camera"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/_10sdp"
                android:src="@drawable/ic_menu_camera"
                app:civ_border_color="@color/black"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_circle_background_color="@color/white" />

        </FrameLayout>

        <EditText
            android:id="@+id/profile_firstname"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="First Name" />

        <EditText
            android:id="@+id/profile_lastname"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/profile_email"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Email Id"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/profile_contacno"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Contact No."
            android:inputType="phone"
            android:maxLength="10" />

        <EditText
            android:id="@+id/profile_password"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/profile_retype_password"
            style="@style/edit_15"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="Retype Password"
            android:inputType="textPassword" />

        <RadioGroup
            android:id="@+id/profile_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/profile_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Male" />

            <RadioButton
                android:id="@+id/profile_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Female" />

        </RadioGroup>

        <Button
            android:id="@+id/profile_edit"
            style="@style/button_15"
            android:text="Edit Profile"
            app:backgroundTint="@color/yellow" />

        <Button
            android:id="@+id/profile_submit"
            style="@style/button_15"
            android:text="Submit"
            android:visibility="gone"
            app:backgroundTint="@color/yellow" />

        <Button
            android:id="@+id/profile_logout"
            style="@style/button_15"
            android:text="Logout"
            app:backgroundTint="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/profile_delete"
            style="@style/button_15"
            android:text="Account Delete"
            app:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>

</ScrollView>