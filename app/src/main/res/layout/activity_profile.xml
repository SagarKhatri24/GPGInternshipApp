<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/bg_style"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupActivity">

    <EditText
        android:id="@+id/profile_firstname"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="First Name"
        style="@style/edit_15"/>

    <EditText
        android:id="@+id/profile_lastname"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Last Name"
        style="@style/edit_15"/>

    <EditText
        android:inputType="textEmailAddress"
        android:id="@+id/profile_email"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Email Id"
        style="@style/edit_15"/>

    <EditText
        android:maxLength="10"
        android:inputType="phone"
        android:id="@+id/profile_contacno"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Contact No."
        style="@style/edit_15"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/profile_password"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Password"
        style="@style/edit_15"/>

    <EditText
        android:inputType="textPassword"
        android:id="@+id/profile_retype_password"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Retype Password"
        style="@style/edit_15"/>

    <RadioGroup
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:orientation="horizontal"
        android:id="@+id/profile_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/profile_male"
            android:text="Male"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:layout_weight="1"
            android:id="@+id/profile_female"
            android:text="Female"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:id="@+id/profile_edit"
        android:text="Edit Profile"
        app:backgroundTint="@color/yellow"
        style="@style/button_15"/>

    <Button
        android:visibility="gone"
        android:id="@+id/profile_submit"
        android:text="Submit"
        app:backgroundTint="@color/yellow"
        style="@style/button_15"/>

    <Button
        android:id="@+id/profile_logout"
        android:text="Logout"
        app:backgroundTint="@android:color/holo_red_dark"
        style="@style/button_15"/>

</LinearLayout>