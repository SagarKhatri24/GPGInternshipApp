<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.GPGInternshipApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:fontFamily">@font/cantora_one</item>
    </style>

    <style name="Theme.GPGInternshipApp" parent="Base.Theme.GPGInternshipApp" />

    <style name="bg_style">
        <item name="android:background">@color/white</item>
    </style>

    <style name="edit_15" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black_40</item>
        <item name="android:textSize">@dimen/_15sdp</item>
    </style>

    <style name="text_13" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="text_13_match" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:textSize">@dimen/_13sdp</item>
    </style>

    <style name="text_13_match_bold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_5sdp</item>
        <item name="android:textColor">@color/black_40</item>
        <item name="android:textSize">@dimen/_13sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_15" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black_40</item>
    </style>

</resources>